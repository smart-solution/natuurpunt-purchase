<?xml version="1.0"?>
<openerp>
    <data>
                
	    <record model="ir.ui.view" id="view_purchase_requisition_np3_form">
	        <field name="name">purchase.requisition.np3.form</field>
	        <field name="inherit_id" ref="multi_analytical_account.view_purchase_requisition_np2_form"/>
	        <field name="model">purchase.requisition</field>
	        <field name="arch" type="xml">
	            
	            <xpath expr="//field[@name='line_ids']/tree//field[@name='analytic_dimension_1_id']" position="replace">
				    <field name="analytic_dimension_1_id" invisible="1"/>
	            </xpath>
	            
	            <xpath expr="//field[@name='line_ids']/tree//field[@name='analytic_dimension_2_id']" position="replace">
				    <field name="analytic_dimension_2_id" invisible="1"/>
	            </xpath>
	            
	            <xpath expr="//field[@name='line_ids']/tree//field[@name='analytic_dimension_3_id']" position="replace">
				    <field name="analytic_dimension_3_id" invisible="1"/>
	            </xpath>

	    	    <xpath expr="//field[@name='line_ids']/tree//field[@name='name']" position="after">
				    <field name="analytic_dimension_1_id" required="1"/>
				    <field name="analytic_dimension_2_id"/>
				    <field name="analytic_dimension_3_id"/>
	            </xpath>
	            
	            
	        </field>
	    </record>
    </data>
</openerp>


